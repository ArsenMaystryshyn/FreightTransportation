<Window x:Class="FreightTransportation.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreightTransportation"
        mc:Ignorable="d"
        Title="Log In" Height="351" Width="333" ResizeMode="NoResize" Left="500" Top="200">
    <Grid>
        <Image x:Name="image" Source="user.png" Stretch="UniformToFill" Margin="92,10,0,0" HorizontalAlignment="Left" Width="144" Height="139" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Log in" Margin="123,239,0,0" Click="button_Click" HorizontalAlignment="Left" Width="75" Height="20" VerticalAlignment="Top" Background="#FF4682B4" Foreground="#FFFFFFFF"/>
        <TextBox x:Name="textBoxLogin" Margin="101,176,0,0" TextWrapping="Wrap"  Height="19" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <PasswordBox x:Name="passwordBox" Margin="101,201,0,0" HorizontalAlignment="Left" Width="120" Height="20" VerticalAlignment="Top"/>
        <Label x:Name="label" Content="Login:" HorizontalAlignment="Left" Margin="59,169,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Password:" HorizontalAlignment="Left" Margin="38,195,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
